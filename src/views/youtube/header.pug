div(class='youtube-header')
    div(class='youtube-header-left-section')
        img(class='youtube-header-hamburger' src='../assets/icons/hamburger-menu.svg')
        img(class='youtube-header-youtube-logo' src='../assets/icons/youtube-logo.svg')
    
    div(class='youtube-header-middle-section')
        input(class='youtube-searchbar', type='text', placeholder='Search')

        button(class='youtube-search-button')
            img(class='youtube-search-icon' src='../assets/icons/search.svg')
            div(class='youtube-tooltip') Search
        
        button(class='youtube-voice-search-button')
            img(class='youtube-voice-icon' src='../assets/icons/voice-search-icon.svg')
            div(class='youtube-tooltip') Search with your voice
    
    div(class='youtube-header-right-section')
        div(class='youtube-header-right-icon-container')
            img(class='youtube-header-upload-icon' src='../assets/icons/upload.svg')
            div(class='youtube-tooltip') Create
        
        div(class='youtube-header-right-icon-container')
            img(class='youtube-header-youtube-apps-icon' src='../assets/icons/youtube-apps.svg')
            div(class='youtube-tooltip') Youtube Apps

        div(class='youtube-header-notification-container')
            img(class='youtube-header-notification-icon' src='../assets/icons/notifications.svg')
            div(class='youtube-header-notifications-count') 3 
            div(class='youtube-tooltip') Notifications
        
        img(class='youtube-header-user-icon' src='../assets/channel-pictures/my-channel.jpeg')
