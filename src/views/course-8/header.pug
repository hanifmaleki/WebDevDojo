div(class='c8-header')
    div(class='c8-header-left-section')
        img(class='c8-header-hamburger' src='../assets/icons/hamburger-menu.svg')
        img(class='c8-header-youtube-logo' src='../assets/icons/youtube-logo.svg')
    
    div(class='c8-header-middle-section')
        input(class='c8-searchbar', type='text', placeholder='Search')

