            img(class='c8-search-icon' src='../assets/icons/search.svg')
        
        button(class='c8-voice-search-button')
            img(class='c8-voice-icon' src='../assets/icons/voice-search-icon.svg')
    
    div(class='c8-header-right-section')
        img(class='c8-header-upload-icon' src='../assets/icons/upload.svg')
        
        img(class='c8-header-youtube-apps-icon' src='../assets/icons/youtube-apps.svg')

        div(class='c8-header-notification-container')
            img(class='c8-header-notification-icon' src='../assets/icons/notifications.svg')
